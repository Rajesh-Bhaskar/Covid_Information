<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cardview_light_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:alertDialogTheme">@style/MaterialAlertDialog.MaterialComponents.Title.Icon</item>
        <!--To make screen appearance black-->
        <item name="android:windowBackground">@color/screen_bg</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges <!-- default, shortEdges, never -->
        </item>
    </style>
    <style name="nav_icons_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_32</item>
        <item name="android:layout_marginTop">@dimen/px_16</item>
        <item name="android:layout_marginBottom">@dimen/px_16</item>
        <item name="android:contentDescription">@string/content_des</item>
        <item name="android:padding">@dimen/px_5</item>
    </style>

    <style name="error_des_txt" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/px_5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!--<item name="android:textColor">@color/txt_grey_66</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/pt_12</item>
    </style>

    <style name="rounded_gradient_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/px_30</item>
        <!--<item name="android:background">@drawable/rounded_btn_corner</item>-->
        <item name="android:background">@drawable/rounded_btn_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/px_20</item>
        <item name="android:paddingTop">@dimen/px_12</item>
        <item name="android:paddingEnd">@dimen/px_20</item>
        <item name="android:paddingBottom">@dimen/px_12</item>
        <item name="android:textSize">@dimen/pt_11</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <string name="content_des">dec</string>
</resources>